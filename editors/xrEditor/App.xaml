<Application x:Class="xrEditor.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:xrEditor"
             StartupUri="MainWindow.xaml">
    <Application.Resources>

        <!-- Fonts -->
        <FontFamily x:Key="IstokWeb">/xrEditor;component/Fonts/#Istok Web</FontFamily>

        <!-- Styles -->
        <Style TargetType="Window" x:Key="WindowDarkTheme" >
            <Setter Property="Background" Value="#141414" />
        </Style>
        <Style TargetType="Label" x:Key="LabelDarkTheme">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontFamily" Value="Istok Web" />
        </Style>

        <Style TargetType="Button" x:Key="ButtonLinkTheme">
            <Setter Property="Foreground" Value="#5299FA" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderBrush" Value="Transparent"/>
        </Style>

    </Application.Resources>
</Application>
